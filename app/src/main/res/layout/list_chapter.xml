<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:selectableItemBackgroundBorderless"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="8dp"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/chapter_item_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="@string/app_name"
        android:textAppearance="?textAppearanceBodyMedium"
        android:textColor="?colorOnSurface"
        app:layout_constraintEnd_toStartOf="@+id/chapter_is_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chapter_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/app_name"
        android:textAppearance="?textAppearanceBodyMedium"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chapter_item_title" />


    <TextView
        android:id="@+id/reader_progress_item_chapter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/app_name"
        android:textAppearance="?textAppearanceBodyMedium"
        android:textSize="12sp"
        android:alpha="0.7"
        app:layout_constraintBottom_toBottomOf="@+id/chapter_item_time"
        app:layout_constraintEnd_toStartOf="@+id/chapter_is_save"
        app:layout_constraintStart_toEndOf="@+id/chapter_item_time"
        app:layout_constraintTop_toTopOf="@+id/chapter_item_time" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/chapter_is_save"
        android:src="@drawable/ic_save_ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/save_button"/>


</androidx.constraintlayout.widget.ConstraintLayout>